{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": false,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@libs/application": ["./src/libs/application/index.ts"],
      "@libs/ui": ["./src/libs/ui/index.ts"],
      "@libs/api": ["./src/libs/api/index.ts"]
    }
  },
  "include": ["src"]
}
