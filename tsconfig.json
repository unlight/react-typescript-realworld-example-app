{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "allowJs": false,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@libs/application": ["src/application/index.ts"],
      "@libs/application/*": ["src/application/*"],
      "@libs/ui": ["src/ui/index.ts"],
      "@libs/ui/*": ["src/ui/*"],
      "@libs/api": ["src/api/index.ts"],
      "@libs/api/*": ["src/api/*"]
    }
  },
  "include": ["src"]
}
